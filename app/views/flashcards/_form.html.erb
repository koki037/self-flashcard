<%= form_with model: @flashcard do |form| %>
  <% if @flashcard.errors.any? %>
    <div>
      <ul>
      <% @flashcard.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-3">
    <%= form.label :category, class: 'form-label' %><br>
    <%= form.select :category, Flashcard::CATEGORY_LIST, {include_blank: '分野を選択'}, {class: "new-category-field", required: true} %>
  </div>
  <div class="mt-3">
    <%= form.label :question, class: 'form-label' %><br>
    <%= form.text_area :question, class: 'form-control' %>
  </div>
  <div class="mt-3">
    <%= form.label :answer, class: 'form-label' %><br>
    <%= form.text_area :answer, class: 'form-control' %>
  </div>
  <div class="mt-3">
    <%= form.label :description, class: 'form-label' %><br>
    <%= form.text_area :description, class: 'form-control' %>
  </div>
  <div class="mt-3">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>