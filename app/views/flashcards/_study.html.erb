<% @flashcards.each do |flashcard| %>
  <div>
    <p>
      問題:<br>
      <%= flashcard.question %>
    </p>
    <p>あとで復習:
    <%= render 'checkbox', flashcard: flashcard %>
    </p>
    <label>チェックして解答を確認</label>
    <input type="checkbox">
    <div class="answer">
      <p>
        解答:<br>
        <%= flashcard.answer %><br>
      </p>
      <p>
        解説:<br>
        <%= flashcard.description %>
      </p>
    </div>
  </div>
  <% end %>