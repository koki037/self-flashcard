<h1>
flashcards
</h1>

<table>
  <tr>
    <th>ID</th>
    <th>category</th>
    <th>question</th>
    <th>answer</th>
    <th>description</th>
  </tr>
  <% @flashcards.each do |flashcard| %>
  <tr>
    <td><%= flashcard.id %></td>
    <td><%= flashcard.category %></td>
    <td><%= flashcard.question %></td>
    <td><%= flashcard.answer %></td>
    <td><%= flashcard.description %></td>
    <td><%= link_to 'show', flashcard_path(flashcard) %></td>
    <td><%= link_to 'edit', edit_flashcard_path(flashcard) %></td>
    <td><%= link_to 'destroy', flashcard_path(flashcard), data: { turbo_method: 'delete', turbo_confirm: 'Are you sure?' } %></td>
  </tr>
  <% end %>
</table>