<div class = "container">
  <h1 class="mt-3">
    暗記カード
  </h1>

  <table id="table" class="mt-3 table-striped table-hover table-responsive table-lg">
    <tr>
      <th>ID</th>
      <th>種類</th>
      <th>問題</th>
      <th>答え</th>
      <th>解説</th>
    </tr>
    <% @flashcards.each do |flashcard| %>
    <tr>
      <td><%= flashcard.id %></td>
      <td><%= flashcard.category %></td>
      <td><%= flashcard.question %></td>
      <td><%= flashcard.answer %></td>
      <td><%= flashcard.description %></td>
      <% if current_user.id == flashcard.user.id %>
        <td><%= button_to '編集', edit_flashcard_path(flashcard), method: :get, class: 'btn btn-primary'%></td>
        <td><%= button_to "削除", flashcard_path(flashcard), method: :delete, class: 'btn btn-primary'%></td>
      <% end %>
    </tr>
    <% end %>
  </table>
</div>