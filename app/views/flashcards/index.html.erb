<div class = "container">
  <h1 class="mt-3">
    暗記カード
  </h1>

  <table id="table" class="mt-3 table-striped table-hover table-responsive table-lg">
    <tr>
      <th>ID</th>
      <th>種類</th>
      <th>問題</th>
      <th>答え</th>
      <th>解説</th>
      <th>復習</th>
    </tr>
    <% @flashcards.each do |flashcard| %>
    <tr>
      <td><%= flashcard.id %></td>
      <td><%= flashcard.category %></td>
      <td><%= flashcard.question %></td>
      <td><%= flashcard.answer %></td>
      <td><%= flashcard.description %></td>
      <td><%= render 'checkbox', flashcard: flashcard %></td>
      <td><%= link_to '編集', edit_flashcard_path(flashcard), method: :get, class: 'btn btn-primary'%></td>
      <td><%= link_to "削除", flashcard_path(flashcard), method: :delete, 
      data: {confirm: '本当に削除してよろしいですか？'}, class: 'btn btn-primary'%></td>
      
    </tr>
    <% end %>
  </table>
</div>