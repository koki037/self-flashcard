<div class="container mt-4">
  <%= render "layouts/shared/header"%>

  <h3>新規会員登録</h3>

  <%= form_with model: @user, url: registration_path(resource_name), local: true do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="bg-light my-3 py-2 pl-2">
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "new-password" %><br />
        <% if @minimum_password_length %>
          <small>(※ 半角英数字<%= @minimum_password_length %>文字以上)</small>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name %><br />
      </div>

      <div class="actions mt-2">
        <%= f.submit "新規登録" %>
      </div>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>